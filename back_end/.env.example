# Database connection string (defaults to local SQLite file)
DATABASE_URL=sqlite:///database.db

# AWS RDS / external MySQL connection (overrides DATABASE_URL when all set)
DB_HOST=cs6620-final-proj-db-baseline.clcccm6aq7d5.us-east-2.rds.amazonaws.com
DB_USER=admin
DB_NAME=fastfooddb
# Fill with the same password stored in ~/.db_password on EC2
DB_PASS=replace-with-db-password

# Redis instance used for caching
REDIS_URL=redis://localhost:6379/0
# AWS ElastiCache Redis
# REDIS_URL=rediss://master.redis-baseline.h6qfk2.use2.cache.amazonaws.com:6380/0

# Cache TTL in seconds
ORDERS_CACHE_TTL=30
TEMP_ORDER_CACHE_TTL=60

# Set to true to temporarily bypass Redis caching
CACHE_DISABLED=false

# Admin password for /admin/* endpoints
ADMIN_PASSWORD=changeme

# RabbitMQ / Amazon MQ (AMQP) connection settings.
# Switch between local Docker and AWS MQ by pointing these to the right broker.
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_QUEUE_NAME=order_write_jobs
# Set to True for Amazon MQ (amqps/SSL), False for local Docker RabbitMQ.
MQ_USE_SSL=False
